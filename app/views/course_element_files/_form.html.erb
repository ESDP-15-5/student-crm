<%= form_for [@course, @course_element, @course_element_file] do |f| %>
    <div class="form-group <%= 'has-error' if @course_element_file.errors[:file].any? %>">
      <%= f.label :file, 'Файл', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :file %>
        <%= render 'shared/field_errors', object: @course_element_file, field_name: :file %>
      </div>
    </div>
    <br/>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 margin-top20">
        <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>