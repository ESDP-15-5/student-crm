<%= form_for [@course, @course_element, @course_element_file] do |f| %>
    <div class="form-group">
      <%= f.label :file, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.file_field :file, class: 'form-control'%>
      </div>
    </div>
    <br/>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 margin-top20">
        <%= f.submit 'Добавить материал', class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>