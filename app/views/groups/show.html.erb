<h1> Курс: <%= @group.course.name %> группа "<%= @group.name %>"</h1>


<%= link_to 'Добавить студентов', new_course_group_group_membership_path(@course, @group.id), class: 'btn btn-primary' %>

<table class="table table-hover" id="student_table">
  <thead>
  <tr>
    <th>Студент</th>
    <th>Email</th>
    <th>Skype</th>
  </tr>
  </thead>
  <tbody>
  <% if @students %>
      <% @students.each do |student| %>
          <tr>
            <td><%= link_to student.full_name, user_path(student) %></td>
            <td><%= student.email %></td>
            <td><%= student.contact.skype %></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>

