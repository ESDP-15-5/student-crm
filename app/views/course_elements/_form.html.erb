<%= form_for [@course, @course_element] do |f| %>
    <div class="form-group <%= 'has-error' if @course.errors[:name].any? %>">
      <%= f.label :course_id, 'Курс', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :course_id, class: 'form-control', value: @course.name, :disabled => true %>
        <%= render 'shared/field_errors', object: @course, field_name: :name %>
      </div>
    </div>
    <br/>
    <div class="form-group margin-top20 <%= 'has-error' if @course_element.errors[:theme].any? %>">
      <%= f.label :theme, 'Тема', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :theme, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @course_element, field_name: :theme %>
      </div>
    </div>
    <br/>
    <div class="form-group margin-top20 <%= 'has-error' if @course.errors[:element_type].any? %>">
      <%= f.label :element_type, 'Тип занятия', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.select(:element_type,
                     CourseElement::ELEMENT_TYPES,
                     class: 'form-control')
        %>
        <%= render 'shared/field_errors', object: @course_element, field_name: :element_type %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 margin-top20">
        <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
        <%= link_to 'Отмена', course_path(@course_element.course_id), class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>