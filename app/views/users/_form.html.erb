<%= form_for @user do |f|%>
    <div class="form-group <%= 'has-error' if @user.errors[:email].any? %>">
      <%= f.label :email, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :email %>
      </div>
    </div>
    <br/>
    <div class="form-group margin-top20 <%= 'has-error' if @user.errors[:password].any? %>">
      <%= f.label :password, 'Пароль', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :password %>
      </div>
    </div>
    <br/>
    <div class="form-group margin-top20 <%= 'has-error' if @user.errors[:password_confirmation].any? %>">
      <%= f.label :password_confirmation, 'Подтвердите пароль', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @user, field_name: :password_confirmation %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 margin-top20">
        <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
      </div>
    </div>
<%end%>