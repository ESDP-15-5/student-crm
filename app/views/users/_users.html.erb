<div class="digg_pagination" style="margin:auto">
  <%= will_paginate @users %>
</div>

<div class="row">
  <%= link_to "Добавить пользователя", new_user_path, class:'btn btn-primary' %>
</div>
<br />
<table class="table table-condensed">
  <tr>
    <th><%= sortable "name", 'Пользователь' %></th>
    <th><%= sortable "role_id", 'Роли' %></th>

    <th><%= sortable "email" %></th>
    <th>Телефон</th>
    <th>skype</th>
    <th></th>

  </tr>

  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user_path(user) %></td>
        <td>
          <% user.roles.each do |role| %>
              <p><%= role.name %></p>
          <% end %>
        </td>

        <td><%= user.email %></td>
        <td><%= user.contact.phone %></td>
        <td><%= user.contact.skype %></td>
        <td>

          <%= link_to edit_user_path(user), class: 'btn btn-warning btn-xs' do %>
              Редактировать
              <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to user_path(user), class: 'btn btn-danger btn-xs',
                      data: {confirm: 'Вы действительно хотите удалить этого пользователя?'}, method: :delete do %>
              Удалить
              <span class="glyphicon glyphicon-remove"></span>
          <% end %>

        </td>
      </tr>
  <% end %>
</table>