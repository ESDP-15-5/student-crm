<p><%= link_to 'Новая учетная запись', new_sms_service_account_path, class: 'btn btn-default margin-bottom' %>
	<%= link_to 'Добавить отправителя', new_sender_path, class: 'btn btn-default margin-bottom' %></p>
<p></p>
<table class="table table-striped table-hover col-sm-12">
  <tr>
    <th class="col-sm-3">Логин</th>
    <th class="col-sm-2">Пароль</th>
    <th class="col-sm-2">Отправители</th>
    <th class="col-sm-3">Действия</th>
  </tr>
  <% @sms_service_accounts.each do |account| %>
      <tr>
        <td><%= link_to account.login, sms_service_account_path(account) %></td>
        <td><%= account.password %></td>
        <td>
          <% account.senders.each do |sender| %>
              <p><%= sender.name %></p>
          <% end %>
        </td>
        <td>
          <%= link_to edit_sms_service_account_path(account), class: 'btn btn-warning btn-xs' do %>
             Редактировать
           <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to sms_service_account_path(account), class: 'btn btn-danger btn-xs',
                      data: {confirm: "Вы уверены что хотите удалить данную учетную запись: #{account.login}?"}, method: :delete do %>
              Удалить
              <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
  <% end %>
</table>