
<%= form_tag assignments_path, method: 'get', id: 'filter_assignments' do %>
    <div class="form-group">
      <label for="course">Курс</label>
      <%= collection_select :course,
                            params[:course_id],
                            Course.all,
                            :id,
                            :name,
                            class: 'form-control',
                            selected: params[:course],
                            include_blank: true %>
      <label for="group">Группа</label>
      <%= grouped_collection_select :group,
                                    params[:group_id],
                                    Course.order(:name),
                                    :groups,
                                    :name,
                                    :id,
                                    :name,
                                    class: 'form-control',
                                    selected: params[:group],
                                    include_blank: true %>
    </div>
<% end %>

<hr/>

<div class="digg_pagination" style="margin:auto">
  <%= will_paginate @hw_table %>
</div>

<table class="table table-bordered table-striped">
<tr>
  <th> Курс </th>
  <th> Занятие </th>
  <th> Гр№ </th>
  <th> ФИО </th>
  <th> Домашняя работа </th>
  <th> Дата загрузки </th>
</tr>

<% @hw_table.each do |row| %>
  <tr>
    <td><%= row[:course] %></td>
    <td><%= row[:period] %></td>
    <td><%= row[:group] %></td>
    <td><%= row[:user] %></td>
    <% if row[:assigment].empty? %>
        <td>
          <%= form_for @assignment_homework_new, url: assignments_path,method: :post, html: { id: "assignment_for_#{row[:period_id]}" } do |f| %>
              <%= f.hidden_field :user_id, value: row[:user_id] %>
              <%= f.hidden_field :period_id, value: row[:period_id] %>
              <%= f.file_field :homework, label: 'Выберите файл', class: 'submit_file'  %>
          <% end %>
        </td>
        <td></td>
    <% else %>
        <td>
          <% row[:assigment].each do|e| %>
              <%= link_to e.homework_file_name, download_hw_path(e.id) %>
          <% end %>
        </td>
        <td>
          <% row[:assigment].each do|e| %>
              <%= e.created_at.strftime("%H:%M %d %b %Y") %>

          <% end %>
        </td>
    <%	end %>

  </tr>
<% end %>

</table>
