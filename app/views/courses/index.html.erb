<% if user_signed_in? %>
    <%= link_to 'Создать новый курс', new_course_path %>

    <table class="table">
      <tr>
        <th>Название курса</th>
        <th> Действия </th>
      </tr>

      <% @courses.each do |course| %>
          <tr>
            <td><%= link_to course.name, course_path(course)  %></td>
            <td>
              <%= link_to 'Edit', edit_course_path(course) %>
              <%= link_to 'Delete', course_path(course),
                          method: :delete,
                          data: {confirm: 'Do you want to remove this product?'} %>
            </td>
          </tr>
      <% end %>
    </table>
<% else %>

<% end %>