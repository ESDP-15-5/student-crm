<h1>Courses#show</h1>
<p>Find me in app/views/courses/show.html.erb</p>

<%= link_to 'Создать элемент курса', new_course_course_element_path(@course.id) %>
<table class="table table-striped">
  <tr>
    <th>Название элемента курса</th>
    <th> Тип элемента </th>
    <th> Действие </th>
  </tr>

  <% @course_elements.each do |element| %>
      <tr>
        <td><%= link_to element.theme, course_course_element_path(@course.id, element.id)  %></td>
        <td><%= element.element_type %></td>
        <td>
          <%= link_to 'Edit', edit_course_course_element_path(@course.id, element.id) %>
          <%= link_to 'Delete', course_course_element_path(@course.id, element.id),
                      method: :delete,
                      data: {confirm: 'Do you want to remove this product?'} %>
        </td>
      </tr>
  <% end %>

</table>