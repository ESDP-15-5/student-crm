<h1>Courses#show</h1>
<p>Find me in app/views/courses/show.html.erb</p>


<table class="table table-striped">
  <tr>
    <th>Название элемента курса</th>
    <th> Тип элемента </th>
    <th> Действие </th>
  </tr>

  <% @course_elements.each do |element| %>
      <tr>
        <td><%= link_to element.theme, course_element_path(element)  %></td>
        <td><%= element.element_type %></td>
        <td>
          <%= link_to 'Edit', edit_course_element_path(element) %>
          <%= link_to 'Delete', edit_course_element_path(element),
                      method: :delete,
                      data: {confirm: 'Do you want to remove this product?'} %>
        </td>
      </tr>
  <% end %>

</table>