<%= form_for @course do |f| %>
    <div class="form-group">
      <%= f.label 'Название курса', class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 margin-top20">
        <%= f.submit 'Создать курс', class: 'btn btn-primary' %>
        <%= link_to 'Отмена', courses_path, class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
