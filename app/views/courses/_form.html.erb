
<%= form_for @course do |f| %>

    <div class="form-group  <%= 'has-error' if @course.errors[:name].any? %>">
      <%= f.label :name, class: 'col-sm-2 control-label' %>
      <div class="form-inline">
        <%= f.text_field :name, placeholder: 'название курса', class: 'form-control' %>
        <%= render 'shared/field_errors', object: @course, field_name: :name %>
      </div>
    </div>
    <div class="form-group <%= 'has-error' if @course.errors[:starts_at].any? %>">
      <%= f.label :starts_at, 'Начало курса' , class: 'col-sm-2 control-label' %>
      <div class="form-inline inline-date">
        <%= f.date_select :starts_at, {year: Time.now.year,order: [:day, :month, :year]}, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @course, field_name: :starts_at %>
      </div>
    </div>
    <div class="form-group <%= 'has-error' if @course.errors[:ends_at].any? %>">
      <%= f.label :ends_at, 'Конец курса', class: 'col-sm-2 control-label' %>
      <div class="form-inline inline-date">
        <%= f.date_select :ends_at, {year: Time.now.year,order: [:day, :month, :year]}, class: 'form-control' %>
        <%= render 'shared/field_errors', object: @course, field_name: :ends_at %>
      </div>
    </div>

    <div class="form-group  <%= 'has-error' if @course.errors[:theoretical_time].any? %>">
      <%= f.label :theoretical_time,'Теория', class: 'col-sm-2 control-label' %>
      <div class="form-inline">
        <%= f.text_field :theoretical_time, placeholder: 'количество часов теории', class: 'form-control' %>
        <%= render 'shared/field_errors', object: @course, field_name: :theoretical_time %>
      </div>
    </div>
    <div class="form-group  <%= 'has-error' if @course.errors[:practical_time].any? %>">
      <%= f.label :practical_time,'Практика', class: 'col-sm-2 control-label' %>
      <div class="form-inline">
        <%= f.text_field :practical_time, placeholder: 'количество часов практики', class: 'form-control' %>
        <%= render 'shared/field_errors', object: @course, field_name: :practical_time %>
      </div>
    </div><div class="form-group  <%= 'has-error' if @course.errors[:educational_cost].any? %>">
  <%= f.label :educational_cost,'Стоимость обучения за весь курс', class: 'col-sm-2 control-label' %>
  <div class="form-inline">
    <%= f.text_field :educational_cost, placeholder: 'количество часов теории', class: 'form-control' %>
    <%= render 'shared/field_errors', object: @course, field_name: :educational_cost %>
  </div>
</div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 margin-top20">
        <%= f.submit yield(:button_text), class: 'btn btn-primary' %>
        <%= link_to 'Отмена', courses_path, class: 'btn btn-primary' %>
      </div>
    </div>
<% end %>
