
<%= form_for [@course, @course_element, @course_element_material] do |form| %>

    <div class="form-group">
      <%= form.label :title, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= form.text_field :title %>
      </div>
    </div>
    <br/>
    <br/>

    <div class="form-group">
      <%= form.label :content, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= form.cktext_area :content, value: 'Default value', class: 'ckeditor' %>
      </div>
    </div>
    <br/>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10 margin-top20">
        <%= form.submit 'Добавить материал', class: 'btn btn-primary' %>
      </div>
    </div>

<% end %>
